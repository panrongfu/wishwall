<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:orientation="vertical"
    android:gravity="bottom">

    <com.ecfex.oa.views.CircleImageView
        android:layout_centerVertical="true"
        android:id="@+id/id_nav_header_image"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_user"
        app:border_width="2dp"
        app:border_color="@color/font_color"/>

    <TextView
        android:id="@+id/id_nav_header_name"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:text="@string/user_name"
        android:textSize="@dimen/font_twenty"
        android:textColor="@color/font_color"
        android:layout_below="@+id/id_nav_header_image"/>

</RelativeLayout>