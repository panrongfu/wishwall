<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--主题颜色-->
    <attr name="theme_color" format="reference|color"/>
    <attr name="theme_statusbar_color" format="reference|color"/>
    <!--主题背景色-->
    <attr name="theme_background" format="reference|color"/>
    <!--flat样式的TextView-->
    <attr name="flat_text" format="reference|color"/>
    <attr name="fits_windows" format="boolean"/>
    <attr name="text_title" format="reference|color"/>
    <attr name="text_subhead" format="reference|color"/>
    <attr name="text_body" format="reference|color"/>
    <!--timeline的分割线-->
    <attr name="divider_timeline_item" format="reference|color"/>
    <!--timeline的背景-->
    <attr name="bg_timline_item" format="reference"/>
    <!--左侧菜单的Header的高度-->
    <attr name="menu_header_height" format="dimension"/>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="SwitchGroup">
        <attr name="orientation1">
            <flag name="horizontal" value="0"></flag>
            <flag name="vertical" value="1"></flag>
        </attr>
        <attr name="pinned_view1" format="reference" />
        <attr name="pinned_item1" format="reference" />
        <attr name="pinned_item_array1" format="reference" />
    </declare-styleable>

    <declare-styleable name="PullLayout">
        <attr name="pull_limit" format="dimension" />
        <attr name="support_over" format="boolean" />
        <attr name="hold_adjust_type">
            <flag name="not_adjust" value="0"></flag>
            <flag name="adjust_content" value="1"></flag>
            <flag name="elasticity_adjust" value="2"></flag>
        </attr>
    </declare-styleable>

</resources>