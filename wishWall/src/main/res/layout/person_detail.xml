<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/person_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/back"
            android:padding="17dp" />

        <TextView
            android:id="@+id/person_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/me_person_detail"
            android:textColor="@color/font_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/person_detail_edit"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:text="@string/change_detail"
            android:textColor="@color/font_color"
            android:textSize="20sp" />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@color/font_color"
        android:scrollbars="none">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="15dp"
                    android:src="@mipmap/ic_user"
                    app:border_color="@color/font_color"

                    app:border_width="2dp" />

                <RelativeLayout
                    android:id="@+id/layout_me_pingjia"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/font_color">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:text="@string/me_person_detail_name"
                        android:textColor="@color/gray_deep"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/person_detail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:paddingRight="5dp"
                        android:textColor="@color/gray_deep"
                        android:textSize="15sp"></TextView>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/gray_light" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/font_color">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:text="@string/me_person_detail_sex"
                        android:textColor="@color/gray_deep"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/person_detail_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:paddingRight="10dp"
                        android:textColor="@color/gray_deep"
                        android:textSize="15sp"></TextView>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/gray_light" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/font_color">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:text="@string/me_person_detail_phone"
                        android:textColor="@color/gray_deep"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/person_detail_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:paddingRight="5dp"
                        android:textColor="@color/gray_deep"
                        android:textSize="15dp"></TextView>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/gray_light" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/font_color">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:text="@string/me_person_detail_qq"
                        android:textColor="@color/gray_deep"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/person_detail_qq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:paddingRight="5dp"
                        android:textColor="@color/gray_deep"
                        android:textSize="15sp"></TextView>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/gray_light" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/font_color">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:text="@string/me_person_detail_weixin"
                        android:textColor="@color/gray_deep"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/person_detail_weixin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:paddingRight="5dp"
                        android:textColor="@color/gray_deep"
                        android:textSize="15sp"></TextView>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/gray_light" />

                <RelativeLayout
                    android:id="@+id/qrcode_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/rectangle_item_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:text="@string/me_person_detail_qrcode"
                        android:textColor="@color/gray_deep"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/person_detail_qrcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:drawableRight="@mipmap/qrcode"
                        android:gravity="center"
                        android:paddingRight="5dp"
                        android:textColor="@color/gray_deep"
                        android:textSize="15sp"></TextView>
                </RelativeLayout>
                <View
                    android:id="@+id/qrcode_divide"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/gray_light" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/font_color">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:text="@string/me_person_detail_born"
                        android:textColor="@color/gray_deep"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/person_detail_born"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:paddingRight="5dp"
                        android:textColor="@color/gray_deep"
                        android:textSize="15dp"></TextView>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/gray_light" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/font_color">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:text="@string/me_person_detail_local"
                        android:textColor="@color/gray_deep"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/person_detail_local"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:paddingRight="5dp"
                        android:textColor="@color/gray_deep"
                        android:textSize="15dp"/>
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>